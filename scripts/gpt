#!/usr/bin/env bash

set -e

root=$(git rev-parse --show-toplevel)
pkg=github.com/collinvandyck/gpterm/cmd/gpterm
args=""

if [[ $# -eq 0 ]]; then                                              
	args="--log ${root}/gpterm.log --request-log ${root}/request.log --pprof=true"
fi

exec go run $pkg $args $@
